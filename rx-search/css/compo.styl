rx-search {
  display: block;
  width: 100%;
  height: 100%;
  min-height: 1em;

  .jumbotron {
    margin-top: 0;
    margin-bottom: 20px;
    h2 {
      margin-top: 10px;
      margin-bottom: 10px;
    }
  }

  .oneline-input-container {
    overflow: hidden;
    padding-right: 0.1em;
    .oneline-input {
      width: 100%;
      height: 34px;
    }
  }

  .oneline-button {
    float: right;
  }

  .center {
    text-align: center;
  }

  .search-input {
    width: 100%;
    height: 40px;
  }
}
